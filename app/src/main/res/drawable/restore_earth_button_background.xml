<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="0"
                android:startColor="#2B7BFF"
                android:endColor="#5A2DFF" />
            <stroke android:width="3dp" android:color="#000000" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:startColor="#35C9FF"
                android:endColor="#6B3DFF" />
            <stroke android:width="3dp" android:color="#000000" />
        </shape>
    </item>
</selector>
